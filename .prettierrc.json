{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "vueIndentScriptAndStyle": true,
  "bracketSameLine": true,
  "singleAttributePerLine": true,
  "htmlWhitespaceSensitivity": "ignore",
  "arrowParens": "avoid",
  "proseWrap": "always",
  "endOfLine": "auto" 
}